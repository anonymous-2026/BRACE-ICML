{
  "domain": "robofactory",
  "task": "PassShoe-table",
  "task_text": "Two Panda arms must hand over a shoe and place it in a goal region. Evaluate replanning latency tails, SLO violations, and timeout-induced failures under a fixed per-episode time budget.",
  "policy": "motion_planning",
  "cuda_visible_devices": "4",
  "random_seed": 1,
  "episodes": 5,
  "max_steps": 0,
  "hard_step_limit": 1200,
  "max_history": 20,
  "replan_interval_steps": 10,
  "trigger_cooldown_steps": 0,
  "slo_ms": 250,
  "episode_time_budget_ms": 9000,
  "simulate_planner_latency": true,
  "ms_per_token": 1.0,
  "overhead_ms": 10.0,
  "tail_lognorm_sigma": 0.25,
  "clarification_overhead_ms": 50.0,
  "clarification_ms_per_token": 1.0,
  "token_budget": 450,
  "num_agents": 2,
  "deadlock_window_steps": 80,
  "stall_obs_delta_epsilon": 1e-6,
  "wait_action_l2_epsilon": 0.01,
  "suppress_policy_stdout": true,
  "robofactory": {
    "repo_dir": "RoboFactory_workspace/RoboFactory",
    "run_dir": "RoboFactory_workspace/RoboFactory__run",
    "env_id": "PassShoe-rf",
    "config_path": "RoboFactory_workspace/RoboFactory/robofactory/configs/table/pass_shoe.yaml",
    "obs_mode": "state",
    "control_mode": "pd_joint_pos",
    "render_mode": "rgb_array",
    "reward_mode": "dense",
    "sim_backend": "cpu",
    "shader": "default"
  },
  "variants": [
    { "name": "goal_cl0", "brace_enabled": false, "context_compress_method": "none", "token_budget": 450, "replan_interval_steps": 10, "instruction_style": "coarsened", "ambiguity_type": "goal", "clarification_budget_turns": 0 },
    { "name": "goal_cl1", "brace_enabled": false, "context_compress_method": "none", "token_budget": 450, "replan_interval_steps": 10, "instruction_style": "coarsened", "ambiguity_type": "goal", "clarification_budget_turns": 1 },
    { "name": "goal_cl2", "brace_enabled": false, "context_compress_method": "none", "token_budget": 450, "replan_interval_steps": 10, "instruction_style": "coarsened", "ambiguity_type": "goal", "clarification_budget_turns": 2 },

    { "name": "process_cl0", "brace_enabled": false, "context_compress_method": "none", "token_budget": 450, "replan_interval_steps": 10, "instruction_style": "coarsened", "ambiguity_type": "process", "clarification_budget_turns": 0 },
    { "name": "process_cl1", "brace_enabled": false, "context_compress_method": "none", "token_budget": 450, "replan_interval_steps": 10, "instruction_style": "coarsened", "ambiguity_type": "process", "clarification_budget_turns": 1 },
    { "name": "process_cl2", "brace_enabled": false, "context_compress_method": "none", "token_budget": 450, "replan_interval_steps": 10, "instruction_style": "coarsened", "ambiguity_type": "process", "clarification_budget_turns": 2 },

