{
  "domain": "robofactory",
  "task": "PassShoe-table",
  "task_text": "RoboFactory budget-matched baselines (random/recency/structured_summary) with auditable summary overhead; token_budget chosen to ensure binding replans.",
  "policy": "motion_planning",
  "random_seed": 0,
  "episodes": 10,
  "max_steps": 0,
  "hard_step_limit": 1200,
  "max_history": 20,
  "replan_interval_steps": 10,
  "trigger_cooldown_steps": 0,
  "slo_ms": 250,
  "episode_time_budget_ms": 9000,
  "simulate_planner_latency": true,
  "ms_per_token": 1.0,
  "overhead_ms": 10.0,
  "tail_lognorm_sigma": 0.25,
  "summary_overhead_ms": 120.0,
  "token_budget": 128,
  "clarification_budget_turns": 0,
  "num_agents": 2,
  "deadlock_window_steps": 80,
  "stall_obs_delta_epsilon": 1e-6,
  "wait_action_l2_epsilon": 0.01,
  "suppress_policy_stdout": true,
  "summary_head_tokens": 32,
  "summary_tail_tokens": 64,
  "robofactory": {
    "repo_dir": "RoboFactory_workspace/RoboFactory",
    "run_dir": "RoboFactory_workspace/RoboFactory__run",
    "env_id": "PassShoe-rf",
    "config_path": "RoboFactory_workspace/RoboFactory/robofactory/configs/table/pass_shoe.yaml",
    "obs_mode": "state",
    "control_mode": "pd_joint_pos",
    "render_mode": "rgb_array",
    "reward_mode": "dense",
    "sim_backend": "cpu",
    "shader": "default"
  },
  "variants": [
    {
      "name": "recency__B128",
      "brace_enabled": false,
      "context_compress_method": "recency",
      "keep_ratio": 1.0,
      "token_budget": 128,
      "replan_interval_steps": 10
    },
    {
      "name": "random__B128",
      "brace_enabled": false,
      "context_compress_method": "random",
      "keep_ratio": 1.0,
      "token_budget": 128,
      "replan_interval_steps": 10
    },
    {
      "name": "structured_summary__B128",
      "brace_enabled": false,
      "context_compress_method": "structured_summary",
      "keep_ratio": 1.0,
      "token_budget": 128,
      "replan_interval_steps": 10,
      "summary_head_tokens": 32,
      "summary_tail_tokens": 64
    }
  ]
}
